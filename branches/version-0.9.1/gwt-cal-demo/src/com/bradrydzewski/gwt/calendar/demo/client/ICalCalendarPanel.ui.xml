<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:c="urn:import:com.bradrydzewski.gwt.calendar.client"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>

		@external headerPanel, footerPanel;
	
		.headerPanel {
			background: #CCCCCC url(header-gradient.gif);
			width:100%;
			border-bottom:1px solid #000;
		}
		.footerPanel {
			background: #CCCCCC url(footer-gradient.gif);
			width:100%;
			line-height:25px;
			text-align:center;
			color:#353535;
			text-shadow: 1px 1px 1px #C7C7C7;
			font-size:12px;
		}
		.footerPanel a, .footerPanel a:visited {
			color:#353535;
		}
		.splitter {
			background: url(splitter-gradient.gif);
			font-size:1px;
		}
		.listPanel {
			background:#dee4ea;
			padding:5px;
			overflow-x:hidden;
			overflow-y:auto;
		}
		.listTitle {
			color:#616e80;
			text-transform:uppercase;	
		}
	</ui:style>

	
	<g:DockLayoutPanel unit='PX' ui:field="layoutPanel" width="100%" height="100%">
		<g:north size='47'>
			<g:FlowPanel styleName="{style.headerPanel}">
				<g:Button ui:field="todayButton">Today</g:Button>
				<g:Button ui:field="oneDayButton">1 Day</g:Button>
				<g:Button ui:field="threeDayButton">3 Day</g:Button>
				<g:Button ui:field="monthButton">Month</g:Button>
			</g:FlowPanel>
		</g:north>
		<g:south size='25'>
			<g:FlowPanel styleName="{style.footerPanel}">
				<g:HTML>
					<a href='http://code.google.com/p/gwt-cal'>gwt-cal</a> 
					widget for Google Web Toolkit, GPLv3, by 
					<a href='http://www.google.com/profiles/Brad.Rydzewski'>Brad Rydzewski</a>
				</g:HTML>
			</g:FlowPanel>
		</g:south>
		<g:west size='180'>
		
			<g:DockLayoutPanel unit='PX'>
				<g:south size="187">
					<d:DatePicker ui:field="datePicker" height="100%" styleName="gwt-ICalDatePicker"></d:DatePicker>
				</g:south>
				<g:south size="10">
					<g:HTMLPanel styleName="{style.splitter}">
						&nbsp;
					</g:HTMLPanel>
				</g:south>
				<g:center>
					<g:FlowPanel styleName="{style.listPanel}">
						<g:FlowPanel>
							<g:Label styleName="{style.listTitle}">Calendars</g:Label>
						</g:FlowPanel>
					</g:FlowPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:west>
		<g:center>
			<c:Calendar ui:field="calendar" width="100%" height="100%" />
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 